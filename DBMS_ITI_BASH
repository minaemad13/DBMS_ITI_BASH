#! /bin/bash

mkdir DBMS 
cd DBMS
clear
echo "			Welcome to our DBMS ğŸ¤—ï¸ğŸ˜Šï¸"
function mainMenu {
       
	echo "		Main Menu Choose what you want to do ğŸ¤”ï¸"
	echo " "
        select ch in " Create Database" " List Databases" " Connect to Database" " Drop Database"  " Exite"
        do
                  case $REPLY in
                        1)  CreateDatabase;;
                        2)  ls ; echo " "; mainMenu ;;
                        3)  ConnetDatabase ;;
                        4)  DropDatabase ;;
                        5) exit ;;
                        *) echo " Wrong Choice ğŸ¤¬ï¸ğŸ‘Šï¸ " ; mainMenu;
                        esac
        done
}

function CreateDatabase {
echo " "
	read -p "Enter Database Name â¡ï¸  " dbName;

	if [ -d $dbName ]
	then
		echo "Database already exists âœ‹ï¸ ";
		echo " "
        	mainMenu
	else
		mkdir $dbName
	if [[ $? == 0 ]]
        then
             echo "Your Database  $dbName Created Successfully ğŸ‘ï¸";
             	echo " "
             mainMenu
         else
         echo "Something Wrong Please Try Again âš ï¸";
         mainMenu
         fi

	fi
	
}
function ConnetDatabase {
	echo " "
        read -p "Enter Database Name you want to connect â¡ï¸  " dbName
        
        if [ -d $dbName ]
        then
                cd $dbName
                clear;
		echo "you are now connected to $dbName âœ…ï¸"
		echo " "
		tableMenu
        else
         	 echo "Database doesn't exists ğŸ¤¬ï¸ğŸ‘Šï¸";
         	 echo " "
		 mainMenu
	fi
}
function DropDatabase {
	echo " "
        read -p "Enter Database Name you want to drop â¡ï¸  " dbName

        if [ -d $dbName ]
        then
                rm -r $dbName
                echo "Database $dbName dropped successfully âœ…ï¸"
                	echo " "
		mainMenu
        else
                 echo "Database doesn't exists ğŸ¤¬ï¸ğŸ‘Šï¸";
                 	echo " "
                 mainMenu
        fi
}


function tableMenu {
	echo "		Table Menu Choose what you want to do ğŸ¤”ï¸"
	echo " "
	select ch in " List All Exsisting Table" " Create Tabl" " Drop Table" " Insert into Table" " Select From Table " " Delete From Table" " Update Table" " Exite"
	do
		  case $REPLY in
   		        1)  ls ; echo " "; tableMenu ;;
   	 		2)  createTable ;;
	 		3)  Drop-Table ;;
   	 		4)  insert ;;
   	 		5)  clear; selectMenu ;;
   	 		6)  deleteFromTable;;
   	 		7)  updateTable;;
    	 		8) exit ;;
    	 		*) echo " Wrong Choice ğŸ¤¬ï¸ğŸ‘Šï¸" ; tableMenu;
  	 		esac
	done
}


function createTable {
read -p "Enter Table Name â¡ï¸  " TableName

if [ -f $TableName ]
then
	echo "Table already exists ğŸ‘€ï¸";
	tableMenu
else
    read -p "Enter Number Of Column â¡ï¸  " col
    
    counter=1
    seperator=":"
    rowSep="\n"
    pKey=""
    columns="Field"$seperator"Type"$seperator"Key"
    while [ $counter -le $col ]
    do
	    read -p "Enter Column $counter Name â¡ï¸  " colName
 
	    echo "Enter the type of Column $counter"
	    select t in " Int" " String" 
	    do
		    case $REPLY in
			    1) colType="int"; break ;;
			    2) colType="str"; break;;
			    *) echo "wrong choice ğŸ¤¬ï¸ğŸ‘Šï¸"; break;;
		    esac
	    done
	    if [[ $pKey == "" ]]
	    then
		    echo "Do You need Make Praimary Key ğŸ”‘ï¸"
		    select p in " Yes" " No"
		    do
			    case $REPLY in
				    1) pKey="PK";columns+=$rowSep$colName$seperator$colType$seperator$pKey;
					    break;;
				    2) columns+=$rowSep$colName$seperator$colType$seperator;
					    break;;
				    *) echo "Wrong Choice ğŸ¤¬ï¸ğŸ‘Šï¸"; 
					    break;;
			    esac
		    done
	    else
	    	columns+=$rowSep$colName$seperator$colType$seperator ;
	    fi
	    if [[ $counter == $col ]]
	    then
		    temp=$temp$colName
	    else
		    temp=$temp$colName$seperator
	    fi
	
	    ((counter++))

    done
    touch .$TableName
    echo -e $columns  >> .$TableName
    touch $TableName
    echo -e $temp >> $TableName


    if [[ $? == 0 ]]
    then
	echo "Your Table $TableName Created Successfully âœ…ï¸";
	tableMenu
    else
	    echo "Something Wrong Please Try Again âš ï¸";
	    tableMenu
    fi
fi    
}

function Drop-Table {

read -p "Enter Table Name â¡ï¸  " TableName

if [ -f $TableName ]
then
	rm -i $TableName ;
	tableMenu;
else
	echo "Sorry the table you entered doesn't exist ğŸ˜¥ï¸ğŸ™Œï¸";
	tableMenu;
fi
}


function insert {

read -p "Enter Table Name â¡ï¸  " TableName

if [ -f $TableName ]
then
	colNum=`awk 'END{print NR}' .$TableName`
	seperator=":"
	rowSep=" "
	
	for (( i=2; i<=$colNum; i++ ))
	do
		colName=`awk 'BEGIN{FS=":"}{if(NR=='$i') print $1}' .$TableName`
		colType=`awk 'BEGIN{FS=":"}{if(NR=='$i') print $2}' .$TableName`
		colKey=`awk 'BEGIN{FS=":"}{if(NR=='$i') print $3}' .$TableName`

                read -p "$colName ($colType) = " data
	        
		if [[ $colType == "int" ]]
		then
			while  [[ $data =~ ^[a-z]*$ ]]
			do
				echo "invalid input Type ğŸ¤¬ï¸ğŸ‘Šï¸";
				read -p "$colName ($colType) = " data
			done
		fi

		if [[ $colKey == "PK" ]]
		then
			while [[ true ]]
			do
				if [[ $data =~ ^[`awk 'BEGIN{FS=":" ;ORS=" "}{if(NR != 1) print $(('$i'-1))}' $TableName`]$ ]]
				then
					echo "invalid input for primary key ğŸ”‘ï¸ğŸ¤¬ï¸ "
				else
					break;
				fi
				read -p "$colName ($colType) = " data
			done
		fi

		if [[ $i == $colNum ]]
		then
			row=$row$data$rowSep
		else
			row=$row$data$seperator
		fi
	done
	echo $row >> $TableName
	if [[ $? == 0 ]]
	then
		echo "Row added Successfully âœ…ï¸"
	else
		echo "Error please try again âš ï¸";
		tableMenu
	fi
	row=""
	tableMenu	         		
else
	echo "Table doesn't exist ğŸ‘Šï¸ğŸ¤¬ï¸";
	tableMenu;
fi
}

function selectMenu {
echo " "
echo "		Select Menu Choose what you want to do ğŸ¤”ï¸"
echo " "
select c in " Select All from Table" " Select Specific Column in Table" " Select from Table with condition" " back to table Menu" " back to main menu"
do
	case $REPLY in 
		1) selectAll ; break ;;
		2) selectCol ; break ;;
		3) selectCondetion ; break ;;
		4) tableMenu  ;;
	        5) mainMenu ;; 	
		*) echo "Wrong Choice ğŸ¤¬ï¸ğŸ‘Šï¸" ;selectMenu;
	esac
done
}

function selectAll {

read -p "Enter Table Name â¡ï¸  " TableName

if [ -f $TableName ]
then
        more $TableName ;
	selectMenu ;
        
else
	echo "Table dosn't exist ğŸ¤¬ï¸ğŸ‘Šï¸";
	selectMenu;
fi

}

function selectCol {

read -p "Enter Table Name â¡ï¸  " TableName
if [ -f $TableName ]
then
	read -p "Enter Column Name â¡ï¸  " colName
       
	ColNum=`awk -F":"  'NR==1{

        for (i=1 ; i<=NF ;i++){
                if( $i == "'$colName'" ){
                           print i
			}
        }

        }' $TableName`

	awk -F":" '{print $'$ColNum'}' $TableName 
	selectMenu ;				   
else
	echo "Table dosn't exist ğŸ¤¬ï¸ğŸ‘Šï¸";
	selectMenu;
fi

}

function selectCondetion {
  echo "Select specific column from TABLE Where FIELD(OPERATOR)VALUE â¬‡ï¸"
  read -p "Enter Table Name â¡ï¸  " TableName
  if [ -f $TableName ]
  then
	  read -p "Enter required FIELD name â¡ï¸  " field

	  fid=`awk 'BEGIN{FS=":"}{if(NR==1){for(i=1;i<=NF;i++){if($i=="'$field'") print i}}}' $TableName`
	  if [[ $fid == "" ]]
	  then
	    echo "Not Found ğŸ¤¬ï¸ğŸ‘Šï¸"
	    selectMenu 
	  else
	    read -p "Supported Operators: [==, !=, >, <, >=, <=] Select OPERATOR â¡ï¸   " op
	    
	    if [[ $op == "==" ]] || [[ $op == "!=" ]] || [[ $op == ">" ]] || [[ $op == "<" ]] || [[ $op == ">=" ]] || [[ $op == "<=" ]]
	    then
	      read -p "Enter required VALUE â¡ï¸  " val
	    
	      res=`awk 'BEGIN{FS=":"}{if ($'$fid$op$val') print $'$fid'}' $TableName`
	      if [[ $res == "" ]]
	      then
		echo "Value Not Found ğŸ¤¬ï¸ğŸ‘Šï¸ "
		selectMenu
		
	      else
		awk 'BEGIN{FS=":"}{if ($'$fid$op$val') print $'$fid'}' $TableName
		
	      fi
	    else
	      echo "Unsupported OperatorğŸ˜¥ï¸"
	      selectMenu
	      
	    fi
	  fi
  else
  	echo "Table Not Found ğŸ˜¥ï¸"
	selectMenu
  fi
    
}


function deleteFromTable {
  read -p"Enter Table Name â¡ï¸  " TableName
  
  if [ -f $TableName ]
  then
	  read -p "Enter Column Name â¡ï¸  " colName
	   ColNum=$(awk -F":"  'NR==1{

        for (i=1 ; i<=NF ;i++){
                if( $i == "'$colName'" ){
                           print i
                        }
        }

	}' $TableName)
	#echo $ColNum
	if [[ $ColNum == "" ]]
	then
		echo "Column not found ğŸ˜¥ï¸";
		tableMenu;
	else
		#set -x
		read -p "Enter Condition Value â¡ï¸ "  val
		Res=`awk -F":" '{
                
			if( $'$ColNum' == "'$val'" )
				print $'$ColNum'

		}' $TableName`
	fi
	#echo $Res
	if [[ $Res == "" ]]
	then
		echo "value not found ğŸ˜¥ï¸";
		tableMenu;
	else
		 NUMR=`awk -F":" 'BEGIN{NumR=0}{ 
			if( $'$ColNum' == "'$val'"){
				print NR
			}		      
	 	} ' $TableName`
	 	count=0
	 	for i in $NUMR
	 	do
	 		sed -i ''$(($i-$count))'d' $TableName
	 		echo "Row Deleted Successfully ğŸ‘ï¸";
	 		((count++)) 
	 		
	 	done
		tableMenu
	fi
  else
	  echo "Table Not Exist ğŸ¤¬ï¸ğŸ‘Šï¸";
          tableMenu ;
  fi
}

function updateTable {
  read -p "Enter Table Name â¡ï¸  " TableName
 
  read -p "Enter Column Name â¡ï¸  " colName

  ColNum=` awk -F":" 'NR==1 {for(i=1;i<=NF;i++)
  {
	  if( $i == "'$colName'" )
		  print i
	  } 
	}' $TableName`

  if [[ $ColNum == "" ]]
  then
    echo "Column Not Found ğŸ˜¥ï¸"
    tableMenu
  else
    read -p "Enter value you want to change it â¡ï¸  " Val
    Res=`awk -F":" '{if( $'$ColNum' == "'$Val'" ) print $'$ColNum'}' $TableName`

    if [[ $Res == "" ]]
    then
      echo "Value Not Found ğŸ˜¥ï¸"
      tableMenu
    else
    #set -x
        read -p "Enter New Value â¡ï¸  " newValue
        NUM=$(awk 'BEGIN{FS=":"}{if ($'$ColNum' == "'$Val'") print NR}' $TableName)
        index=0
	 	for i in $NUM
	 	do
	 		sed -i 's/'$Val'/'$newValue'/g' $TableName
	 		echo "Row Updated Successfully from $oldValue to $newValue ğŸ‘ï¸"
	 		((index++)) 		
	 	done
      #set +x        
        tableMenu
      fi
    fi
}

mainMenu
